{% extends 'layout/base.html.twig' %}
{% block body %}
<div class="col-sm-8 blog-main">

{#dump(posts)#}

{% for post in posts %}
  <div class="blog-post">
    <h2 class="blog-post-title">{{post.titulo}}</h2>
    <p class="blog-post-meta">{{ post.fecha | date('Y-m-d') }} by <a href="#">{{post.autor}}</a></p>

    <p>{{post.contenido}}
    <a href="{{ path('simple_post',{'id':post.id}) }}">Read this blog post.</a>
    </p>
    <hr>
  </div><!-- /.blog-post -->
{% endfor %}


